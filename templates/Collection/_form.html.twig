{% import "Index/macro.html.twig" as macro %}

<div class="form-group row">
	{{ form_label(form.title, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
	<div class="col-sm-10">
		{{ form_errors(form.title) }}{{ form_widget(form.title, {'attr':{'class':'form-control'}}) }}
	</div>
</div>

<div class="form-group row">
	{{ form_label(form.text, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
	<div class="col-sm-10">
		{{ form_errors(form.text) }}{{ form_widget(form.text) }}
	</div>
</div>

<div class="form-group row">
	{{ form_label(form.releasedDate, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
	<div class="col-sm-2">
		{{ form_errors(form.releasedDate) }}{{ form_widget(form.releasedDate, {'attr':{'class':'form-control'}}) }}
	</div>
	<div class="col-sm-4">
		{{ form_widget(form.unknownReleasedDate) }} {{ form_label(form.unknownReleasedDate) }}
	</div>
</div>

<div class="form-group row">
	{{ form_label(form.image, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
	<div class="col-sm-10">
		{{ form_errors(form.image) }}{% if entity.image is defined %}{{ macro.currentImage("photo/collection/", entity.image) }}{% endif %}{{ form_widget(form.image) }}
	</div>
</div>

<div class="form-group row">
	{{ form_label(form.language, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
	<div class="col-sm-10">
		{{ form_errors(form.language) }}{{ form_widget(form.language, {'attr':{'class':'form-control'}}) }}
	</div>
</div>

<div class="form-group row">
	{{ form_label(form.biography, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
	<div class="col-sm-10">
		{{ form_errors(form.biography) }}{{ form_widget(form.biography, {'attr':{'class':'combobox'}}) }}
	</div>
</div>

<div class="form-group row">
	{{ form_label(form.widgetProduct, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
	<div class="col-sm-10">
		{{ form_errors(form.widgetProduct) }}{{ form_widget(form.widgetProduct, {'attr':{'class':'text form-control'}}) }}
	</div>
</div>
<hr />
{{ form_widget(form.save, {'icon': 'fa-save'}) }}
{{ form_rest(form) }}