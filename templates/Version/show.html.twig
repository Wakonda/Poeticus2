{% extends 'generic_layout.html.twig' %}

{% block head_title %}{{ 'menu.left.Admin'|trans }} - {{ 'admin.index.Version'|trans }}{% endblock %}
{% block main_title %}{{ 'menu.left.Admin'|trans }} - {{ 'admin.index.Version'|trans }}{% endblock %}

{% block main_content %}
	<table class="admin_show">
		<tr>
			<th>{{ "admin.version.VersionNumber"|trans }}</th>
			<td>{{ entity.versionNumber }}</td>
		</tr>
		<tr>
			<th>{{ "admin.version.ReleaseDate"|trans }}</th>
			<td>{{ entity.releaseDate|date("d/m/Y") }}</td>
		</tr>
		<tr>
			<th>{{ "admin.version.File"|trans }}</th>
			<td>
				<iframe src="{{ asset('photo/version/'~entity.file) }}" width="100%" height="500"></iframe>			
			</td>
		</tr>
	</table>
	<hr>
	<a href="{{ path('versionadmin_edit', { 'id' : entity.id }) }}"><i class="fa fa-edit"></i> {{ 'admin.index.Update'|trans }}</a> - <a href="{{ path('versionadmin_new') }}"><i class="fa fa-plus-square"></i> {{ 'admin.index.Create'|trans }}</a>
{% endblock %}